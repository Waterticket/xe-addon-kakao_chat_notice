<?xml version="1.0" encoding="UTF-8"?>
<addon version="0.2">
    <title xml:lang="ko">카카오톡 버튼 애드온</title>
    <description xml:lang="ko">홈페이지 하단에 카카오톡 버튼을 달 수 있는 애드온 입니다.</description>
    <version>1.0.0</version>
    <date>2020-10-28</date>

    <author email_address="waterticket@hoto.dev" link="https://hoto.dev">
        <name xml:lang="ko">Waterticket</name>
    </author>
	<extra_vars>
		<var name="target_url" type="text">
			<title xml:lang="ko">버튼 클릭시 이동할 url</title>
			<description xml:lang="ko">버튼 클릭시 이동할 위치 url을 입력해주세요</description>
		</var>
		<var name="up_effect" type="select">
			<title xml:lang="ko">올라오는 이펙트</title>
			<description xml:lang="ko">등장 이펙트를 줍니다</description>
            <options value="Y">
                <title xml:lang="ko">예</title>
            </options>
            <options value="N">
                <title xml:lang="ko">아니오</title>
            </options>
		</var>
        <var name="notice_memo" type="text">
			<title xml:lang="ko">알림 메모</title>
			<description xml:lang="ko">버튼 위에 표시할 메모입니다.</description>
		</var>
        <var name="top_pos" type="text">
			<title xml:lang="ko">알림버튼 위치 (상하)</title>
			<description xml:lang="ko">알림버튼의 위치를 결정합니다. (기본값: 40)</description>
		</var>
	</extra_vars>	
</addon>
